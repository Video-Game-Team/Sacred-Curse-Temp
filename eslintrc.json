{
    "root": true,
    "ignorePatterns": [
        "**/test",
        "**/__tests__"
    ],
    "plugins": [
        "prettier"
    ],
    "env": {
        "node": true,
        "browser": true,
        "jquery": true,
        "es2021": true
    },
    "globals": {
        "schedule": "writable"
    },
    "extends": [
       "eslint:recommended",
       "prettier",
       "airbnb"
    ],
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "no-console": "off",
        "no-unused-vars": [
            "warn",
            {
                "vars": "local"
            }
        ],
        "prefer-const": "warn",
        "quotes": [
            "warn",
            "single"
        ],
        "space-infix-ops": "warn",
        "prettier/prettier": "error"   
    }
}